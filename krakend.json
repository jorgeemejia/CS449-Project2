            "_comment" : "LOGIN",
            "endpoint": "/api/login",
            "method" : "POST",
            "output_encoding": "json",
            "extra_config": {
                "auth/signer": {
                    "alg" : "HS256",
                    "jwk_local_path" : "symmetric.json",
                    "keys_to_sign": [
                        "access_token",
                        "refresh_token"
                    ],
                "kid" : "sim2",
                "disable_jwk_security": true
                }
            },
            "backend": [
                {
                    "url_pattern": "/login",
                    "host" : [
                        "http://localhost:5000"
                    ],
                    "encoding": "json",
                    "method": "POST",
                    "extra_config": {
                        "backend/http": {
                            "return_error_details": "backend_login"
                        }
                    }
                }
            ]
